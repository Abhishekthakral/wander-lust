<% layout("/layouts/boilerplate.ejs")%>
<body>
    
    <h3>Create A new listing</h3>
    
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row-mb-3">
            <div class="col-8 offset-2">
        <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="listings[title]" placeholder="Enter Title" class="form-control" required>
        <div class="invalid-feedback">please enter a valid title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea type="text" name="listings[description]" placeholder="Enter Description" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter a valid description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image:</label>
            <input type="file" name="listings[image]"  class="form-control">
        </div>
        <div class="row">
        <div class=" mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input type="number" name="listings[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">prive must be more then 10000</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input type="text" name="listings[country]" placeholder="india" class="form-control" required>
            <div class="invalid-feedback">please enter a valid Country</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listings[location]" placeholder="gurgaon" class="form-control" required>
            <div class="invalid-feedback">please enter a valid Location</div>
        </div>
        
        <button class="btn btn-dark add-btn">ADD</button>
        </div>
        </div> 
    </form>
    </body>